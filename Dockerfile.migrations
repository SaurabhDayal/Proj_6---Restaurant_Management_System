FROM debian:buster-slim

WORKDIR /app

#Install curl
RUN ["apt-get", "update"];
RUN ["apt-get", "--yes", "--force-yes", "install", "curl"];

# Install DB Migration tool.
RUN ["curl", "-fsSL", "-o", "/usr/local/bin/migrate", "https://github.com/amacneil/dbmate/releases/download/v1.6.0/dbmate-linux-amd64"]
RUN ["chmod", "+x", "/usr/local/bin/migrate"]

COPY create_db.sh /app/create_db.sh